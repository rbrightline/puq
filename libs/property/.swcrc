{
  "jsc": {
    "target": "es2017",
    "minify": {
      "mangle": true,
      "compress": {
        "dead_code": true,
        "toplevel": true
      }
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "legacyDecorator": true
    },
    "keepClassNames": true,
    "externalHelpers": true,
    "loose": false
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": true,
  "exclude": [
    ".*\\.spec.ts$"
  ]
}