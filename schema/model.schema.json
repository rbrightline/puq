{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ModelSchema",
    "properties": {
        "databaseType": {
            "$ref": "#/definitions/DatabaseType"
        },
        "description": {
            "type": "string",
            "default": "Add description"
        },
        "properties": {
            "description": "Model properties such as name, description",
            "patternProperties": {
                "[a-zA-Z]": {
                    "$ref": "#/definitions/PropertySchema"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/PropertyNames"
            }
        },
        "relations": {
            "description": "Model relations such as category, department",
            "patternProperties": {
                "[a-zA-Z]": {
                    "$ref": "#/definitions/RelationSchema"
                }
            },
            "propertyNames": {
                "$ref": "#/definitions/PropertyNames"
            }
        }
    },
    "definitions": {
        "PropertyNames": {
            "$ref": "./property-names.schema.json"
        },
        "PropertySchema": {
            "$ref": "./property.schema.json"
        },
        "RelationSchema": {
            "$ref": "./relation.schema.json"
        },
        "DatabaseType": {
            "type": "string",
            "enum": [
                "postgres",
                "mysql",
                "mariadb",
                "sqlite",
                "better-sqlite3",
                "oracle",
                "mssql",
                "cockroachdb",
                "mongodb",
                "sqljs",
                "cordova",
                "react-native",
                "expo",
                "aurora-data-api",
                "aurora-data-api-pg",
                "sap",
                "spanner"
            ]
        }
    }
}